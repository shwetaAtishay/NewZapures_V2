</div>

<div class="row">
    <div class="col-12">
        <div class="card noc-layouts mt-0">
            <div class="card-header title-heading p-0">
                <h4 class="m-0 title-heading float-left">University Mapping <br /> <span style=" font-size: small; color: aqua; font-weight: bold; "> Degree,Course and Subject</span></h4>

            </div>
            <div class="card-body">
                @using (Html.BeginForm("UniversityMapDetails", "Master", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <input type="hidden" id="Id" name="Id" value="0" />
                    <div class="row">
                        <div class="form-group col-lg-3">
                            <label for="example-text-input" class="col-sm-12 noc-form-label" style="margin-left:-10px">Select University</label>
                            <div>
                                <select class="form-control noc-input-text" name="TagUniversity" id="txtTagUniversity" required>
                                    <option value="">Select University</option>
                                    @{
                                        foreach (var item in UniversityList)
                                        {
                                            <option value="@item.Id">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div>
                                <label for="error" class="col-sm-12" id="errorUniversity" style="display:none;"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="example-text-input" class="col-sm-12 noc-form-label" style="margin-left:-10px">Select Degree</label>
                            <div>
                                <select class="form-control noc-input-text" name="TagDegrees" id="txtTagDegree" required>
                                    <option value="">Select Degree</option>
                                    @{
                                        foreach (var item in DegreeList)
                                        {
                                            <option value="@item.Text">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div>
                                <label for="error" class="col-sm-12" id="errormss" style="display:none;"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="example-text-input" class="col-sm-12 noc-form-label" style="margin-left:-10px">Select Course</label>
                            <div>
                                <select class="form-control noc-input-text" name="TagCourse" id="txtTagCourse" required>
                                    <option value="">Select Course</option>

                                </select>
                            </div>
                            <div>
                                <label for="error" class="col-sm-12" id="errorCourse" style="display:none;"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-3">
                            <label for="example-text-input" class="col-sm-12 noc-form-label" style="margin-left:-10px">Select Subject</label>
                            <div>
                                <select class="form-control noc-input-text" name="TagSubject" id="txtTagSubject" required>
                                    <option value="">Select Subject</option>

                                </select>
                            </div>
                            <div>
                                <label for="error" class="col-sm-12" id="errorSubject" style="display:none;"></label>
                            </div>
                        </div>
                        <div class="form-group col-lg-12" style="text-align: end;">
                            @*<label for="example-text-input" class="col-sm-12" style="margin-left:-10px">&nbsp;</label>*@
                            <button type="button" id="btnReset" style="background-color:burlywood;"><i class="fas fa-minus-circle"></i> Reset</button>
                            <button type="submit"  id="btnSave" style="background-color:blue;color:whitesmoke;"><i class="fas fa-save"></i> Save</button>

                        </div>
                    </div>
                                        }
            <div class="card-body" >
                <div class="form-group is-empty row" id="DataEventlist">
                    <table id="datatable-buttons" class="table table-striped " style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                        @*<div class="form-group" style="overflow-x:auto;">
                            <table class="table table-striped table-bordered dt-responsive word-wrap" id="datatable-buttons ">*@
                                <thead class="">
                                    <tr>
                                        <th>Sr</th>
                                        <th>University Name</th>
                                        <th>Degree</th>
                                        <th>Course</th>
                                        <th>Subject</th>
                                        <th>Status</th>

                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var i = 1;
                                        foreach (var item in Model)
                                        {
                                            <tr id="tr_@item.Id">
                                                <td>@i</td>
                                                <td>@item.UniversityName</td>
                                                <td>@item.TagDegrees</td>
                                                <td>@item.CourseName</td>
                                                <td>@item.SubjectName</td>
                                                <td>
                                                    <div class="form-check form-switch">
                                                        @{if (item.iStts == 1)
                                                            {
                                                                <input id="University-@item.Id" class="form-check-input ChangeStatus" type="checkbox" data-id="University-@item.Id" name="@item.Id" value="@item.iStts" checked>
                                                            }
                                                            else
                                                            {
                                                                <input id="University-@item.Id" class="form-check-input ChangeStatus" type="checkbox" data-id="University-@item.Id" name="@item.Id" value="@item.iStts">

                                                            }
                                                        }

                                                    </div>
                                                </td>
                                                <td>
                                                    <a id="University-@item.Id" class="Deleteclass" name="2" data-id="@item.Id" onclick="DeleteData(@item.Id)" title="Delete"><i class="fas fa-times text-danger font-16"></i></a>

                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                </div>

            </div>
        </div>
    </div>
</div>
