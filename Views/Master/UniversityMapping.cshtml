@using NewZapures_V2.Models
@model List<UniversityMap_View>
@{
    ViewBag.Title = "University Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";


    List<Dropdown> UniversityList = new List<Dropdown>();
    if (ViewBag.UniversityList != null)
    {
        UniversityList = (List<Dropdown>)ViewBag.UniversityList;
    }


    List<Dropdown> DegreeList = new List<Dropdown>();
    if (ViewBag.DegreeList != null)
    {
        DegreeList = (List<Dropdown>)ViewBag.DegreeList;
    }

}
