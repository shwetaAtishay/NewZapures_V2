                                            {
                                                <td class="d-flex" style="gap:3px;">
                                                    <a class="theme-edit-btn" href="#"><i class="fas fa-eye"></i></a>
                                                </td>
                                            }
                                            else
                                            {

                                                <td class="d-flex" style="gap:3px;">
                                                    <a class="theme-edit-btn" href="@Url.Action("EditDetails", "Trustee",new { guid=item.ApplGuid,clgId=item.iFKCLG_ID,deptID=item.iFKDEPT_ID,clgStatus=item.clgStatus})"><i class="fas fa-pencil"></i></a>
