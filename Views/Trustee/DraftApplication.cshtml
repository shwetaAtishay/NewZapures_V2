                                            <td hidden>@item.ApplGuid</td>
                                            <td>@item.createdDate</td>
                                            <td>@item.TrustName</td>
                                            <td>@item.CollegeName</td>
                                            <td hidden>@item.CoursesCollection</td>
                                            <td hidden>@item.SubjectsCollection</td>
                                            <td hidden>@item.iFKDEPT_ID</td>
                                            <td hidden>@item.iFKCLG_ID</td>
                                            <td hidden>@item.ApplicationNumber</td>
