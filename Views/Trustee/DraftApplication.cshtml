    }


    $('#btnConfirmCancel').click(function () {

        var gusiD = $('#hdnappGUID').val();
        var reason = $('#ddlCancelReason option:selected').val();

        if (reason == "0") {
            alert('Please Select Reason');
        }
        else {
            CancelApplication(gusiD, reason);
        }
    });

    function CancelApplication(ApplGUID,reason) {
        var Data = {
            applGUID: ApplGUID,
            Creason: reason
        }
        var d = JSON.stringify(Data)

        $.ajax({
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            url: GetglobalDomain() + "/Trustee/CancelDraftApplication",
            dataType: 'json',
            type: 'Post',
            cache: false,
            data: JSON.stringify(Data),
            success: function (data) {
                //console.log(data.Type);
                //console.log(data);
                if (data.StatusCode == 1) {

                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: `Success`,
                        html: `<p>${data.msg}</p>`,
                        allowOutsideClick: false,
                        showCloseButton: true,
                        showConfirmButton: false,
                    });

                    setTimeout(function () {
                        location.reload();
                    }, 2000);
                }
            },
            error: function (d) {
                //alert(d);
            }
        });
    }

</script>