<div class="card noc-layouts mt-0">
    <div class="p-0 card-header title-heading">
        <h4 class="m-0 title-heading float-left">@ViewBag.Title</h4>
    </div>
    <div class="card-body noc-layouts-tbl">
        <div class="form-group ">
            <input type="hidden" id="hdnGUID" />
            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive word-wrap mt-3">
                <thead class="">
                    <tr>
                        <th>#</th>
                        <th>Creation Date</th>
                        <th>Application Type</th>
                        <th hidden>GUID</th>
                        <th>Application Number</th>
                        <th>Trust Name</th>
                        <th>College</th>
                        <th>Department</th>
                        <th>Course</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        if (draft != null && draft.Count > 0)
                        {
                            var i = 1;
                            foreach (var item in draft)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.createdDate</td>
                                    <td>@item.ApplicationType</td>
                                    <td hidden>@item.ApplGuid</td>
                                    <td>@item.ApplicationNumber</td>
                                    <td>@item.TrustName</td>
                                    <td>@item.CollegeName</td>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.CourseName</td>
                                    <td>@item.Applicationstatus</td>
                                    <td>
                                        @*<button class="btn btn-sm btn-outline-primary"><i class="fas fa-eye"></i></button>
                                            &nbsp;&nbsp;*@
                                        <button id="btnUpload" class="noc-upload-btn" data-toggle="modal" data-target="#ThankYou" data-dismiss="modal" onclick="SetGUID('@item.ApplGuid')"><i class="fas fa-upload"></i></button>
                                    </td>
                                </tr>
                                i++;

                            }
                        }

                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center">No Data Available</td>
                            </tr>

                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="modal fade" id="ThankYou" tabindex="-1" role="dialog" aria-labelledby="Thankyou" aria-hidden="true" style="display:none;">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="Thankyou">Upload Receipt</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body text-center">
                        <h2>Please Upload Receipt</h2>
                        <div class="container mt-5" style="text-align: justify;">


                            <input type="file" id="fluUpload" onchange="return encodeImageFileAsURL(this,'hdnConvertedDoc','hdnConvertedDocExten')" />
                            <input type="hidden" id="hdnConvertedDoc" />
                            <input type="hidden" id="hdnConvertedDocExten" />

