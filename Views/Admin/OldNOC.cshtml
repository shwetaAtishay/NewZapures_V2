            dataType: 'json',
            type: 'Post',
            cache: false,
            data: JSON.stringify(Data),
            success: function (data) {
                console.log(data);
                var mainData = data.Data;

                if (mainData.length > 0) {
                    mainData.forEach(function (item, index) {
                        var courseID = item.Id.split('-')[0];
                        var subjectID = item.Id.split('-')[1];

                        var courseName = item.Text.split(':')[0].trim();
                        var subjectName = item.Text.split(':')[1].trim();
                        var gID = CreateGuid();

                        htmlString += `<tr><td><div class="custom-control custom-checkbox">
