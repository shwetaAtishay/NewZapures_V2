                    })

                    $('#tblNocData tbody').html('');
                   $('#tblNocData tbody').html(htmlString);

                }
                else {
                    htmlString = `<tr><td colspan="5" class="text-center">No Data Available</td></tr>`;
                    $('#tblNocData tbody').html('');
                    $('#tblNocData tbody').html(htmlString);
                }
