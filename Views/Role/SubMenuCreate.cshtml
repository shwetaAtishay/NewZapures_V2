@using NewZapures_V2.Models
@model SubMenuMaster
@{
    ViewBag.Title = "Sub Menu Master";
    ViewBag.Create = "Add New SubMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ShowMenuDropDown> Menulist = new List<ShowMenuDropDown>();
    if (ViewBag.Menulist != null)
    {
        Menulist = (List<ShowMenuDropDown>)ViewBag.Menulist;
    }

    }

  @section styles{
}
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Zapures</li>
                    <li class="breadcrumb-item">Master</li>
                    <li class="breadcrumb-item active">@ViewBag.Create</li>
                </ol>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>
<div class="row">
    <div class="col-lg-12">
        @using (Html.BeginForm("SubMenuCreate", "Role", FormMethod.Post, new { @class = "formcreateupdate", @id = "frmAddUpdate", enctype = "multipart/form-data" }))
        {
            <input name="SubMenuId" id="SubMenuId" type="hidden" value="@(Model != null ? Model.SubMenuId.ToString() : "0")">

            <div class="card noc-layouts mt-0">
                <div class="title-heading align-items-center justify-content-between d-flex">
                    <h4 class="mt-0 title-heading p-0 w-50 float-left">Sub Menu Master</h4>
                    <a class="theme-button-mockup" href="@Url.Action("SubMenuIndex", "Role")"><i class="fas fa-arrow-left"></i> Back to List</a>
                    @*<button onclick="location.href='@Url.Action("Create")';return false;" class="btn btn-gradient-primary float-right waves-effect waves-light"><i class="mdi mdi-plus-circle-outline mr-2"></i> @ViewBag.Create</button>*@
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="form-group is-empty col-lg-6">
                            <label for="nameInput" class="noc-form-label control-label">Menu Name</label>
                            <div class="">
                                <select class="singleselect noc-input-text" name="MenuId" id="MenuId" required>

                                    <option value="">Select Menu Name</option>
                                    @{
                                        foreach (var item in Menulist)
                                        {
                                            <option @(Model != null && Model.MenuId == item.MenuId ? "selected" : "") value="@item.MenuId">@item.MenuName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group is-empty col-lg-6">
                            <label for="nameInput" class="noc-form-label control-label">SubMenu Name</label>
                            <div class="">
                                <input name="SubMenuName" id="SubMenuName" type="text" value="@(Model != null ? Model.SubMenuName : "")" class="form-control noc-input-text" placeholder="Enter Menu Name" required>
                            </div>
                        </div>
                        <div class="form-group is-empty col-lg-6">
                            <label for="nameInput" class="noc-form-label control-label">Controller Name</label>
                            <div class="">
                                <input name="ControllerName" id="ControllerName" type="text" value="@(Model != null ? Model.ControllerName : "")" class="form-control noc-input-text" placeholder="Enter Controller Name" required>
                            </div>
                        </div>
                        <div class="form-group is-empty col-lg-6">
                            <label for="nameInput" class="noc-form-label control-label">Action Name</label>
                            <div class="">
                                <input name="ActionMethod" id="ActionMethod" type="text" value="@(Model != null ? Model.ActionMethod : "")" class="form-control noc-input-text" placeholder="Enter Action Name" required>
                            </div>
                        </div>

                        <div class="form-group is-empty col-lg-6">

                            <label for="nameInput" class="noc-form-label control-label">Active</label>
                            <div class=" custom-control custom-switch switch-success">
                                <input type="checkbox" class="custom-control-input" id="Status" name="Status" value="@(Model != null? Model.Status.ToString() : "0")" @(Model != null && Model.Status == 1 ? "checked" : "")>
                                <label class="custom-control-label" for="Status"></label>
                            </div>
                        </div>

                        <div class="form-footer col-lg-12 text-right">
                            <div class="pull-right">
                                <a href="@Url.Action("SubMenuIndex", "Role")" class="theme-discard-btn">DISCARD</a>
                                <button class="theme-button-mockup"> SAVE </button>
                            </div>
                        </div>



                    </div>
                    
               
                    
                   
                    
                    

                </div>
            </div>
            
        }
    </div>
</div>
